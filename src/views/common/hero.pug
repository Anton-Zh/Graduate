// hero section

section.hero__container
  .socials__block.hero__socials
    ul.socials__list
      -
        var socials = [
          { name: 'vk', href: 'https://vk.com'},
          { name: 'github', href: 'https://github.com'},
          { name: 'in', href: 'https://www.linkedin.com'}
        ]

      each item in socials
        li.socials__item
          a(href=`${item.href}`).socials__link
            +icon(`${item.name}`, 'social__img')
  .hero__menu
    .burger-btn
      .burger-btn__elem
  .hero__title
    +icon('portfolio_header', 'hero__pic')
  .hero__content
    .user
      .user-img__wrapper
        +image('avatar.jpg', 'avatar pic', 'user__img')
      span.user__name Жалдак Антон
      span.user__spec Личный сайт веб разработчика
  .hero__arrow-down
    +icon('arrow_down', 'arrow-down__pic' )